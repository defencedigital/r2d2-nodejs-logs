{
  "name": "@defencedigital/r2d2-nodejs-logs",
  "version": "0.1.5",
  "description": "A flexible logging library for TypeScript projects",
  "main": "dist/cjs/logger.js",
  "module": "dist/esm/logger.js",
  "types": "dist/types/logger.d.ts",
  "private": true,
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "logging",
    "typescript",
    "nodejs"
  ],
  "author": "Lukasz Raczylo",
  "license": "UKGLF",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defencedigital/r2d2-nodejs-logs.git"
  },
  "resolutions": {
    "js-yaml": "^3.14.2",
    "glob": "^10.5.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
